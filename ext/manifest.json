{
  "manifest_version": 2, 

  "name": "Amazon Smart Reviews",
  "description": "This Extension will remove the current Amazon Reviews and replace them with the Amazon Smart Review Visualization",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "tabs",
    "Access-Control-Allow-Origin: http://amazon.smart-comments.com/id/*/ ",
    "http://amazon.smart-comments.com/*"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Smart Comments!"
  }
}
